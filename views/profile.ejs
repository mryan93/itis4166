<%- include('./partials/header.ejs')%>
<h2 id="profile-welcome">Welcome, <%= user.firstName + " " + user.lastName%></h2>
<%if(connections.length){%>
    <p id="profile-text">You have created the following connections</p>
    <%connections.forEach(connection => {%>
        <ul id="connectionList">
        <a id="profile-connections" href = '/connections/<%= connection.id%>'><li id="createdConnections"><%= connection.name%></li></a>
        </ul>
    <%});
} else{%>
    <p>You have not created any connections</p>
<%}%>

<%if(rsvps.length){%>
    <p id="profile-text">You have rsvp'd for the following connections</p>
    <%rsvps.forEach(rsvp=> {%>
        <%allConnections.forEach(connection=> {%>
            <%if(rsvp.connectionName == connection.id){%>
                <ul id="connectionList">
                    <a id="profile-connections" href='/connections/<%= connection.id%>'>
                        <li id="createdConnections">
                            <%= connection.name + ': Rsvp?: ' + rsvp.response%>
                        </li>
                    </a>
                </ul>
            <%}%>
                
        <%});%>
        <%}); } else{%>
            <p>You have not rsvp'd for any connections</p>
            <%}%>


</body>

