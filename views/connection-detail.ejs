<%- include('./partials/header.ejs')%>
    <div id="connection-detail-div">
        <h1 id="event-name"><%= connection.name%>, <%= connection.location%>, <%= connection.date%>, <%= connection.startTime%> to <%= connection.endTime%></h1>
        <form>
        <button type="submit" formmethod="POST" id="delete-button" formaction="/connections/<%= connection.id%>?_method=DELETE">Delete</button>
        <button type="submit" formmethod="GET" formaction="/connections/<%= connection.id%>/edit" id="update-button">Update</button>
        </form>
        <a href="connections.html">
            <img src="<%= connection.image%>" alt="A Yellow Jeep" id="jeep-img">
        </a>
        <h2 id="detail-paragraph">
            Hosted by <%= connection.hostName.firstName + ' ' + connection.hostName.lastName%>
        </h2>
        <h3 id="date">
            <%= connection.date%>
        </h3>
        <h3 id="time">
            <%= connection.startTime%> to <%= connection.endTime%>
        </h3>
        <h3 id="location">
            <%= connection.location%>
        </h3>
        <h1 id="details">
            Details
        </h1>
        <h3 id="details-paragraph">
            <%= connection.details%>
        </h3>
    </div>
<%- include('./partials/footer.ejs')%>